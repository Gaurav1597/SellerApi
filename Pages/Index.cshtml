<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Seller Detail</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    @*<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">*@
    <link href="~/css/W3School.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <link href="~/images/" />
    <script src="~/js/script.js"></script>
    <link href="~/css/main.css" rel="stylesheet" />
    <style>
        /*give color to Add Movie button*/
        .private a {
            background-color: #009999;
            font-family: cursive;
        }
        
    </style>
</head>
<body style="font-family:cursive; background-color: aquamarine; ">
    <style>
        body {
            background-image: url(https://paydaycashloan8pf.com/wp-content/uploads/2018/03/ss-think-contemplate-businessman.jpg)
        }
    </style>
    <div class="container-xl">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-6">

                        @*<h1 style="font-family:cursive; font-size:xx-large; padding-left:550px;padding-top:5px; color:black;"> <b>Sellers</b></h1>*@
                    </div>
                        
               
                    @*adding button*@
                    <div class="col-sm-6 private" style="padding-right:5000px;">
                        <a href="#addSellerModal" class="w3-button  w3-hover-blue-grey w3-round-xxlarge" data-toggle="modal"><i class="material-icons">&#xE147;</i> <span>Add Seller Here</span></a>
                    </div>
                </div>
            </div>
            @*creatring table to display the information*@
            <table class="table table-striped table-hover w3-hover-border-dark-gray my-form " style="font-family:cursive;">
                <thead>


                    <tr>
                        <th>Sellername</th>
                        <th>Company</th>
                        <th>Producttype</th>
                        <th>Commission</th>
                        <th colspan="6">Actions</th>
                    </tr>
                </thead>
                <tbody id="allSellers">
                    
                        <!-- Tables appear Here-->

                    

                </tbody>
            </table>

        </div>
    </div>
    <!-- Adding Modal by using HTML -->

    <div name="myForm" id="addSellerModal" class="modal w3-animate-zoom">
        <div class="modal-dialog">
            <div class="modal-content">
                <form action="javascript:void(0);" method="POST" onsubmit="addItem()">
                    <div class="modal-header">
                        <h4 class="modal-title">Add Seller Here</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label>Name</label>
                            <input id="add-name" type="text" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label>Company</label>

                            <input id="add-company" type="text" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label>Producttype</label>
                            <input id="add-producttype" type="text" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label>Commisison</label>
                            <input id="add-commission" type="text" class="form-control" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <input type="button" class="btn btn-default w3-round-xlarge text-dark" data-dismiss="modal" value="Cancel">
                        <input type="submit" class="btn btn-primary w3-round-xlarge text-dark" value="Add">
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Editing Modal by using HTML -->
    <div id="editSellerModal" class="modal w3-card-4 w3-animate-zoom">
        <div class="modal-dialog">
            <div class="modal-content">
                <form class="my-form">
                    <div class="modal-header">
                        <h4 class="modal-title">Edit Seller Detail Here</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <input id="edit-id" type="hidden" val="" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Name</label>
                            <input id="edit-name" type="text" class="form-control" val="" required>
                        </div>
                        <div class="form-group">
                            <label>Company</label>
                            <input id="edit-company" type="text" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label>Producttype</label>
                            <input id="edit-producttype" type="text" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label>Commission</label>
                            <input id="edit-commission" type="text" class="form-control" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <input type="button" class="btn btn-outline-dark w3-round-xlarge text-dark" data-dismiss="modal" value="Cancel">
                        <input onclick="saveItem();" type="submit" class="btn btn-info w3-round-xlarge text-dark" value="Save">
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Delete Modal by using HTML -->
    <div id="deleteSellerModal" class="modal w3-animate-zoom">
        <div class="modal-dialog">
            <div class="modal-content">
                <form style="font-size:larger;">
                    <div class="modal-header">
                        <h4 class="modal-title">Delete Seller Detail </h4>
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <input id="delete-id" type="hidden" class="form-control" value="">
                        </div>
                        <p>Do you want to delete this Information ?</p>

                    </div>
                    <div class="modal-footer">
                        <input type="button" class="btn btn-default w3-round-xlarge text-dark" data-dismiss="modal" value="Cancel">
                        <input onclick="deleteItem($('#delete-id').val())" id="delete-item" type="submit" class="btn btn-danger w3-round-xlarge text-dark " value="Delete">
                    </div>
                </form>
            </div>
        </div>
    </div>

    
    <div class="container">
        <main role="main" class="pb-3">

        </main>
    </div>

    <footer class="w3-border-bottom footer text-muted">
        <div class="container">
            Developer SellerApi
        </div>
    </footer>
</body>
</html>

